
@{
    ViewBag.Title = "Pesquisar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <script src="~/Scripts/professor/professorRepository.js"></script>
    <script src="~/Scripts/professor/professorPesquisar.js"></script>
}

<div class="row" id="app-pesquisar">
    <div class="col-md-12">
        <h3>Pesquisar Professor</h3>
    </div>
    <div class="col-md-12" style="margin-top: 20px; margin-bottom: 20px;">
        <div class="row">
            <div class="form-inline">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control mypesquisa" id="mypesquisa" placeholder="Pesquisar" style="width: 100%;">
                </div>
                <button class="btn btn-success" onclick="location.href = '/Professor/Cadastrar';">Cadastrar</button>
               
            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin-top: 15px;">
        <table class="table table-striped table-bordered customTable display dataTable">
            <thead>
                <tr>
                    <th>Nome Professor</th>
                    <th>CPF</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="professor in lstProfessores">
                    <td> {{ professor.Nome }} </td>
                    <td> {{ professor.CPF }} </td>
                    <td>
                        <div class="form-inline">
                            <button type="button" class="btn btn-sm btn-default mb-2" v-on:click="gerenciar(professor.ProfessorId)">Gerenciar</button>
                            <button type="button" class="btn btn-sm btn-default mb-2" disabled="disabled" v-on:click="alterar(professor.ProfessorId)">Alterar</button>
                            <button type="button" class="btn btn-sm btn-danger mb-2" disabled="disabled" v-on:click="remover(professor.ProfessorId)">Remover</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


