
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <h3>Cadastro de Curso</h3>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Nome da Disciplina</label>
                <input type="text" name="Nome" class="form-control" v-model="disciplina.Nome" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Descrição</label>
                <input type="text" name="Descricao" class="form-control" v-model="disciplina.Descricao" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Código da Disciplina</label>
                <input type="text" name="Codigo" class="form-control" v-model="disciplina.Codigo" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Semestre</label>
                <input type="text" name="Semestre" class="form-control" v-model="disciplina.Semestre" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Carga horária</label>
                <input type="text" name="CargaHoraria" class="form-control" v-model="disciplina.CargaHoraria" />
            </div>
        </div>
        <div class="col-md-12">
            <button class="btn btn-primary" disabled="disabled" v-on:click="salvar()"><i class="fa fa-save"></i> Salvar</button>
            <button class="btn btn-default" disabled="disabled"><i class="fa fa-times"></i> Cancelar</button>
        </div>
    </div>

