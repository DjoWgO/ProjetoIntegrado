
@{
    ViewBag.Title = "Pesquisar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/Scripts/curso/serviceCurso.js"></script>
    <script src="~/Scripts/curso/cursoPesquisar.js"></script>
}

<div class="row" id="app-pesquisar">
    <div class="col-md-12">
        <h3>Pesquisar Curso</h3>
    </div>
    <div class="col-md-12" style="margin-top: 20px; margin-bottom: 20px;">
        <div class="row">
            <div class="form-inline">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" id="mypesquisa"  placeholder="Pesquisar" style="width: 100%;">
                </div>
                <button class="btn btn-success" onclick="location.href = '/Curso/Cadastrar';">Cadastrar</button>

            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin-top: 15px;">
        <table class="table table-striped table-bordered customTable display dataTable">
            <thead>
                <tr>
                    <th>Denominação</th>
                    <th>Tipo do Curso</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="curso in lstCursos">
                    <td>
                        {{ curso.Denominacao }}
                    </td>
                    <td>
                        {{ curso.TipoCursoDescricao }}
                    </td>
                    <td>
                        <div class="form-inline">
                            <button type="button" disabled="disabled" class="btn btn-sm btn-default mb-2">Alterar</button>
                            <button type="button" disabled="disabled" class="btn btn-sm btn-danger mb-2">Remover</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

